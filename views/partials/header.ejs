<header class="bg-white border-b border-gray-200 shadow-sm">
    <div class="px-4 lg:px-6 py-4 flex items-center justify-between">
        <!-- Mobile menu button -->
        <button onclick="toggleMobileMenu()" class="lg:hidden p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition mr-3">
            <i class="fas fa-bars text-xl"></i>
        </button>

        <div class="flex-1">
            <h2 class="text-xl lg:text-2xl font-bold text-gray-800"><%= title %></h2>
            <p class="text-xs lg:text-sm text-gray-600 mt-1 hidden sm:block">Manage your DNS zones and records</p>
        </div>

        <div class="flex items-center space-x-2 lg:space-x-4">
            <!-- Status Badge - Hidden on small screens -->
            <div class="hidden md:flex items-center space-x-2 px-3 lg:px-4 py-2 bg-green-50 rounded-lg border border-green-200">
                <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                <span class="text-xs lg:text-sm font-medium text-green-700">ALL SYSTEMS OPERATIONAL</span>
            </div>

            <!-- Actions -->
            <button class="p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition">
                <i class="fas fa-bell"></i>
            </button>
            <button class="p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition">
                <i class="fas fa-question-circle"></i>
            </button>
        </div>
    </div>
</header>
